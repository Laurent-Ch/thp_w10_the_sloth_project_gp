<p id="notice"><%= notice %></p>


<div class="picture-index-content">
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr class="picture-elements">
        <a href="<%= picture_url(picture) %>"><img src="<%= picture.image_url %>", style="width: 300px; height: 337px; object-fit: cover;"/></a>
        <% @tagspicture = TagsPicture.where(picture: picture) %>
        <% @tagspicture.each do |tagpicture| %>
          <div>
          <button class="btn mb-3 btn-sm btn-info"><%= tagpicture.tag.title %></button>
          </div>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Picture', new_picture_path %>
