
<%= form_tag orders_path do %>
  <div class="order-recap">
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
      <h2>Récapitulatif de votre commande</h2>
        <p>Nom: <%= current_user.first_name %> </p>
        <p>Prénom: <%= current_user.last_name %></p>
        <p>Adresse mail: <%= current_user.email%></p>
        <p>Numéro: <%= current_user.phone_number %></p>
        <p></p>

        <br>
        <label class="amount">
        <h4><b>Prix total : <%= session[:amount] %> €</b></h4>
        </label><br>
        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-description="Achat d'un produit"
        data-amount=<%= @stripe_amount %>
        data-currency="eur"
        data-locale="auto"></script><br>
        <p style="font-size: 12px; margin-top: 12px"><%= link_to 'Modifier votre commande', cards_path %></p>
        </article>
  </div>
  <br/>
<% end %>