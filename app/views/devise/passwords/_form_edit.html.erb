  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-style' }) do |f| %>
      <h2 class="h3 mb-3 fw-normal">Modifier votre&nbsp;mot de passe</h2>

        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      <div class="form-floating">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', placeholder: 'Password' %>
        <%= f.label :password, "Nouveau mot de passe" %>
      </div>

      <div class="form-floating">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Password password_confirmation' %>
        <%= f.label :password_confirmation, "Confirmer mot de passe" %>
      </div>

    <div class="actions">
      <%= f.submit "Changer mon mot de passe", class: 'w-100 mt-3 btn btn-lg btn-primary' %>
    </div>
    <p class="mt-5 mb-3 text-muted">Â© 2021</p>
  <% end %>