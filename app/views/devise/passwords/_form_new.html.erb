<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-style' }) do |f| %>
<h2 class="h3 mb-3 fw-normal">Mot de passe oublié&nbsp;?</h2>

  <div class="form-floating">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'name@example.com' %>
    <%= f.label :email %>
  </div>

  <div class="actions">
    <%= f.submit "Envoyez moi les instructions", class: 'w-100 mt-3 btn btn-lg btn-primary' %>
  </div>
  <p class="mt-5 mb-3 text-muted">© 2021</p>
<% end %>