<%= render "devise/shared/error_messages", resource: resource %>
<div class="d-flex align-items-center" style="height: 60rem;">
<div class="text-center container" style="max-width: 400px;">
  <h1 class="h3 mb-3 fw-normal">Edit <%= resource_name.to_s.humanize %></h1>

  <%= render "form_edit" %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'w-100 btn mb-3 btn-lg btn-primary' %></p>

  <%= link_to "Back", :back %>
</div>
</div>