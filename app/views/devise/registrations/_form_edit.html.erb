<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-style'}) do |f| %>

  <div class="form-floating">
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control mb-3" %>
    <%= f.label :first_name %>
  </div>

  <div class="form-floating">
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control mb-3" %>
    <%= f.label :last_name %>
  </div>

  <div class="form-floating">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3" %>
    <%= f.label :email %>
  </div>

  <div class="form-floating">
    <%= f.telephone_field :phone_number, autofocus: true, autocomplete: "tel", class: "form-control mb-3" %>
    <%= f.label :phone_number %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-floating">
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control mb-3" %>
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-floating">
    <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control mb-3" %>
    <%= f.label :password_confirmation %>
  </div>

  <div class="form-floating">
    <%= f.password_field :current_password, autofocus: true, autocomplete: "current-password", class: "form-control mb-3" %>
    <%= f.label :current_password %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'w-100 btn mb-3 btn-lg btn-primary'  %>
  </div>
<% end %>